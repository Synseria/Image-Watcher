# ========================================
# Configuration Image Watcher
# ========================================

# Mode d'exécution (development, production, test)
NODE_ENV=development

# Niveau de log (ERROR, WARN, INFO, DEBUG, TRACE)
LOG_LEVEL=INFO

# ========================================
# OpenAI Configuration (optionnel)
# ========================================

# URL de l'API OpenAI ou compatible
OPENAI_BASE_URL=https://api.openai.com/v1

# Clé API OpenAI
OPENAI_API_KEY=sk-your-api-key-here

# Modèle à utiliser (gpt-4-turbo, gpt-4o-mini, etc.)
OPENAI_MODEL=gpt-4o-mini

# ========================================
# Image Watcher Configuration
# ========================================

# Mode de fonctionnement (AUTO_UPDATE, NOTIFICATION, DISABLED)
# Si défini, écrase les annotations Kubernetes
# IMAGE_WATCHER_MODE=NOTIFICATION

# Stratégie de mise à jour (ALL, MAJOR, MINOR, PATCH)
# Si défini, écrase les annotations Kubernetes
# IMAGE_WATCHER_STRATEGY=ALL

# Exécuter la vérification au démarrage (TRUE, FALSE)
RUN_ON_BOOT=FALSE

# ========================================
# GitHub Configuration
# ========================================

# Token GitHub pour éviter les limites de rate limit
# Créer un token sur : https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_token_here

# ========================================
# Notification Configuration (optionnel)
# ========================================

# Discord Webhook URL
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Telegram Bot Token
# TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
# TELEGRAM_CHAT_ID=-1001234567890

# ========================================
# Kubernetes Configuration
# ========================================

# Si vous utilisez un kubeconfig custom
# KUBECONFIG=/path/to/kubeconfig

# Namespace par défaut (optionnel)
# KUBERNETES_NAMESPACE=default
